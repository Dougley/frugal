{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist"],
  "rules": {
    "no-undef": "off",
    "n/no-callback-literal": "off",
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.test.tsx"],
      "plugins": ["@typescript-eslint", "jest"],
      "extends": ["plugin:jest/recommended"]
    }
  ]
}
