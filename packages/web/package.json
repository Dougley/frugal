{
  "private": true,
  "name": "@dougley/frugal-web",
  "version": "0.0.0",
  "scripts": {
    "build:remix": "remix build",
    "build:remix:sm": "remix build --sourcemap",
    "dev:wrangler": "cross-env NODE_ENV=development npm run wrangler",
    "start": "cross-env NODE_ENV=production npm run wrangler",
    "build:css": "cross-env NODE_ENV=production tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --minify",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/app.css --watch",
    "dev": "npm run build && concurrently \"npm:dev:*\"",
    "dev:remix": "remix watch",
    "build": "npm run build:css && npm run build:remix",
    "build:sm": "npm run build:css && npm run build:remix:sm",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" --ignore-path .gitignore .",
    "test": "cross-env TEST=true playwright test",
    "wrangler": "wrangler pages dev ./public --r2 R2 --kv KV_SESSIONS --persist"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-sentry": "^1.1.1",
    "@headlessui/react": "^1.7.12",
    "@remix-run/cloudflare": "^1.14.0",
    "@remix-run/cloudflare-pages": "^1.14.0",
    "@remix-run/react": "^1.14.0",
    "@sentry/remix": "^7.40.0",
    "cross-env": "^7.0.3",
    "csstype": "^3.1.1",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-icons": "^4.8.0",
    "remix": "^1.14.0",
    "remix-seo": "^0.1.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.19.0",
    "@playwright/test": "^1.31.2",
    "@remix-run/dev": "^1.14.0",
    "@remix-run/eslint-config": "^1.14.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "daisyui": "^2.51.3",
    "discord-api-types": "^0.37.35",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "wrangler": "^2.12.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.+(js|mjs|ts|tsx|css|md|yml)": [
      "prettier --write"
    ]
  }
}
