{
  "name": "@dougley/frugal",
  "packageManager": "pnpm@8.8.0",
  "version": "0.0.0",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "rimraf": "^5.0.4",
    "ts-jest": "^29.1.1",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "lint:report": "eslint --output-file eslint_report.json --format json \"{packages,apps}/**/src/**/*.{ts,tsx,cts,mts}\"",
    "lint": "eslint \"{packages,apps}/**/src/**/*.{ts,tsx,cts,mts}\"",
    "format": "prettier --write \"{packages,apps}/**/src/**/*.{ts,tsx,cts,mts}\""
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "@cloudflare/workers-types"
      ]
    },
    "patchedDependencies": {
      "slash-create@5.13.0": "patches/slash-create@5.13.0.patch"
    }
  }
}
